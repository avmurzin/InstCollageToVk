<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="136dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="16dp"
        android:background="@drawable/plane_border"
        android:orientation="horizontal"      >

        <FrameLayout
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_margin="0dp"
            >

            <ImageView
                android:id="@+id/rowPhoto"
                android:layout_width="136dp"
                android:layout_height="136dp"
                android:contentDescription="Instagram Image"
                android:paddingTop="0dp"
                android:layout_margin="0dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/check_0_icon"
                android:layout_gravity="center"
                android:id="@+id/selectPhoto" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:gravity="top"
            android:layout_marginLeft="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/photoDate"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_marginLeft="0dp"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif"
                    android:textColor="#8A000000"
                    android:text="01 Jan 1970"/>

                <TextView
                    android:id="@+id/photoTitle"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:textSize="28sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#FF000000"
                    android:text="Title"/>


                <TextView
                    android:id="@+id/photoLikeCount"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:gravity="right"
                    android:fontFamily="sans-serif"
                    android:textSize="12dp"
                    android:textColor="#DE000000"
                    android:text="0"/>
            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="76dp"
                android:layout_marginBottom="20dp"
                android:contentDescription="Like Icon"
                android:src="@drawable/like_icon" />

        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="344dp"
        android:layout_height="5dp"
        android:background="@drawable/shadow_line" >
    </View>

    <TextView
        android:id="@+id/uuid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        />




</LinearLayout>